-- Instances:

local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local TextButton = Instance.new("TextButton")

--Properties:

ScreenGui.Parent = game.CoreGui
ScreenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling

Frame.Parent = ScreenGui
Frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
Frame.Position = UDim2.new(0.792964816, 0, 0.48982361, 0)
Frame.Size = UDim2.new(0, 125,0, 175)
Frame.Active = true
Frame.Draggable = true

TextButton.Parent = Frame
TextButton.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
TextButton.BorderColor3 = Color3.fromRGB(170, 0, 0)
TextButton.Size = UDim2.new(0, 100,0, 142)
TextButton.Font = Enum.Font.PatrickHand
TextButton.Text = "Auto Train"
TextButton.TextColor3 = Color3.fromRGB(255, 255, 255)
TextButton.TextSize = 45.000
TextButton.TextWrapped = true
local DropWaist = false

function on()
	DropWaist = false
	TextButton.BorderColor3 = Color3.new(170, 0, 0)
end

function off()
	DropWaist = true
	TextButton.BorderColor3 = Color3.new(0, 170, 0)
	while TextButton.BorderColor3 == Color3.new(0, 170, 0) do
		wait(1)
		game.Players.LocalPlayer.Character.UpperTorso.Waist:remove()
		wait(0.3)
		if TextButton.BorderColor3 == Color3.new(170, 0, 0) then
			
			break
		end
	end
end

function onClicked()

	if DropWaist == true then on() else off() end

end

TextButton.MouseButton1Click:connect(onClicked)

on()
